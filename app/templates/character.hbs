<div {{bindAttr class="isEditing:edit"}}>
    <div class="hide-on-edit">
        <h2>{{name}}</h2>
        <h3>{{race}} {{class}}</h3>

        <h4>Ability Scores</h4>
        <dl>
            <dt>Strength</dt>
            <dd>
                <span class="score">{{strength}}</span>
                <span class="modifier">+0</span>
            </dd>
            <dt>Dexterity</dt>
            <dd>
                <span class="score">10</span>
                <span class="modifier">+0</span>
            </dd>
            <dt>Constitution</dt>
            <dd>
                <span class="score">10</span>
                <span class="modifier">+0</span>
            </dd>
            <dt>Wisdom</dt>
            <dd>
                <span class="score">10</span>
                <span class="modifier">+0</span>
            </dd>
            <dt>Intelligence</dt>
            <dd>
                <span class="score">10</span>
                <span class="modifier">+0</span>
            </dd>
            <dt>Charisma</dt>
            <dd>
                <span class="score">10</span>
                <span class="modifier">+0</span>
            </dd>
        </dl>

        <button {{action toggleProperty 'isEditing'}}>Edit</button>
    </div>

    <div class="show-on-edit">
        <fieldset>
            <legend>Basics</legend>
            <p>
                <label for="name">Name</label>
                {{input type=text value=name}}
            </p>
            <p>
                <label for="race">Race</label>
                {{input type=text value=race}}
            </p>
            <p>
                <label for="class">Class</label>
                {{input type=text value=class}}
            </p>
        </fieldset>
        <fieldset>
            <legend>Ability Scores</legend>
            <p>
                <label for="strength">Strength ({{strength}})</label>
                {{view App.RangeField valueBinding="strength" min="3" max="20"}}
            </p>
        </fieldset>
        <button {{action toggleProperty 'isEditing'}}>Done</button>
    </div>
</div>