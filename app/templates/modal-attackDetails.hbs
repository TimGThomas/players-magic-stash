<h2 class="card-section">Attack Details</h2>
<p>
  <label>Attack Name (Weapon, Spell, etc.)</label>
  {{input type=text value=name}}
</p>
<p>
  <label>Bonus ({{modifier bonus}})</label>
  {{view App.RangeField valueBinding="bonus" min="-20" max="20"}}
</p>
<p>
  <label>Damage</label>
  {{input type=text value=damage}}
</p>
<div class="actions">
  <a class="action btn" href="#" {{action closeModal}}>Close</a>
</div>